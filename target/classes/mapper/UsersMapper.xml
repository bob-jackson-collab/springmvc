<!-- namespace 就是Mapper接口的地址 -->
<mapper namespace="com.ys.mvc.mapper.UsersMapper">

    <resultMap id="BaseResultMap" type="com.ys.mvc.pojo.Users">
        <id column="id" property="id"/>
        <result column="username" property="username"/>
        <result column="userpasswd" property="userpasswd"/>
    </resultMap>

    <sql id="columns">
    id,username ,userpasswd
    </sql>

    <!--id 称为statement的id，将sql语句封装成mappedStatement中 paramerType 参数类型 resultType 返回的结果集-->
    <select id="get" resultType="BaseResultMap">
        SELECT
        <include refid="columns"/>
        FROM users
    </select>


    <select id="getUser" parameterType="user2" resultType="users">
        SELECT * from users WHERE  users.id=#{id}
    </select>

